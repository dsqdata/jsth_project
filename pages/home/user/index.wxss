@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";


.userinfo {
	display: flex;
	flex-direction: column;
	padding: 50rpx 0;
	align-items: center;
	background: #05a6f0;
}

.userinfo-avatar {
	width: 128rpx;
	height: 128rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 15rpx;
	color: #fff;
}

.badge {
	width: 15px;
	height: 15px;
	line-height: 15px;
	background: #ff0000;
	color: #fff;
	border-radius: 50%;
	text-align: center;
	font-size: 8px;
}

.logout {
	position: relative;
	margin-top: 1.17647059em;
	line-height: 1.41176471;
	font-size: 17px;
	padding: 10px 15px;
	background: #fff;
	text-align: center;
}

.logout:before {
	content: " ";
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	height: 1px;
	border-top: 1rpx solid #D9D9D9;
	color: #D9D9D9;
}

.logout:after {
	content: " ";
	position: absolute;
	left: 0;
	bottom: 0;
	right: 0;
	height: 1px;
	border-bottom: 1rpx solid #D9D9D9;
	color: #D9D9D9;
}

.webrow{
margin-top: 1.17647059em;
}


.cell{
    margin: 30rpx 0;
    background-color: white;
    height: 92rpx;
    border: 1rpx  solid #bcbcbc;
    border-left: 0;
    border-right: 0;
}

.cell image{
    display: inline-block;
    width: 70rpx;
    height: 100%;
    margin-left: 20rpx;
    vertical-align: middle;
}
.cell text{
    font-size: 31rpx;
    color: #666666;
    margin-left: 20rpx;
    line-height: 92rpx;
    display: inline-block;
    height: 100%;
}

.right_arrow{
    float: right;
    margin-right: 20rpx;
}

.menu_item{
    background-color: white;
    display: inline-block;
    width: 24.2%;
    height: 200rpx;
    border-bottom: 1rpx solid #f1f0f0;
    border-left: 1rpx solid #f1f0f0;
    padding: 2.33rpx;
    margin-bottom: -6px;
}
.menu_item image{
    height: 55%;
    width: 150rpx;
    display: block;
    margin: 20rpx auto;
}
.menu_item text{
    display: block;
    color: #666666;
    font-size: 20rpx;
    text-align: center;
}